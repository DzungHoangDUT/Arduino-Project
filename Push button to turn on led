/* This sketch use to turn the led on by pushing the button */
#define ledPin 4 //Connect the led to pin 4
#define buttonPin 5 //Connect the button to pin 5

void setup ()
	{
		pinMode(ledPin, OUTPUT);
		pinMode(buttonPin, INPUT);
	}

void loop ()
	{
		int buttonState = digitalRead(buttonPin);//Take input from pin
		/* If you press the button, the value of buttonState will be 0, and 1 if you don't press the button.
		So that to turn the led on, the mode of ledPin must be reverse to buttonState by ! or not */
		digitalWrite(ledPin, ! buttonState); 
	}
	
